{
  "manifest_version": 3,
  "name": "KlixGenix.ID - Premium Apps Access",
  "version": "1.0.0",
  "description": "Akses mudah ke 50+ aplikasi premium dengan satu klik. Extension resmi KlixGenix.ID",
  "author": "KlixGenix.ID",
  "homepage_url": "https://klixgenix.id",

  "icons": {
    "16": "data:image/svg+xml;base64,",
    "32": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "KlixGenix.ID Premium Access"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],

  "permissions": ["activeTab", "storage", "tabs", "cookies"],

  "host_permissions": [
    "https://netflix.com/*",
    "https://chat.openai.com/*",
    "https://accounts.spotify.com/*",
    "https://www.canva.com/*",
    "https://www.figma.com/*",
    "https://www.notion.so/*",
    "https://accounts.google.com/*",
    "https://www.hotstar.com/*",
    "https://play.hbomax.com/*",
    "https://auth.services.adobe.com/*",
    "https://klixgenix.id/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.css", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
